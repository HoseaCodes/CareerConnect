<%- include('../partials/header') %>
<!-- Google Font -->
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
<!-- Secondary Link Bootstrap -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<!-- Personal stylesheet -->
<link rel="stylesheet" href="/css/user/userform.css">
<!-- icons -->
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

<div class="container">
<!-- User Form -->

  <form action="/user/<%user._id%>" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input name="email" type="email" class="form-control" id="inputEmail4">
      </div>
    </div>
      <div class="form-row">
      <div class="form-group col-md-6">
        <label>Phone Number</label>
        <input name="phoneNo" type="number" class="form-control">
      </div>
      </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputAddress">Location</label>
      <input name="location" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label> Career</label>
      <input name="job" type="text" class="form-control" placeholder="Current or Past Title">
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label> Education</label>
      <input name="school" type="text" class="form-control" placeholder="Bootcamp, Self-taught or Formal">
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label> Project</label>
      <input name="project" type="text" class="form-control" placeholder="Current or Past Project">
    </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Group</label>
        <input name="groups" type="text" class="form-control" placeholder="Enter a group">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Event</label>
        <input name="events" type="text" class="form-control" placeholder="Enter an event">
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck">
        <label class="form-check-label" for="gridCheck">
          Check me out
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
  </form>

  <!-- Form End -->
</div>

<%- include('../partials/footer') %>
