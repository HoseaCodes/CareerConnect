<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">  -->
<!-- Personal stylesheet -->
<link rel="stylesheet" href="/css/user/userform.css">
<!-- icons -->
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
<body>
  <!-- header -->
  <header>
    <ul>
      <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a></li>
      <li><a href="/feed"><i class="fa fa-globe" aria-hidden="true"></i>Networking</a></li>
      <li><a href="/user"><i class="fa fa-user" aria-hidden="true"></i>Profile</a></li>
      <li><a href="/jobs"><i class="fa fa-briefcase" aria-hidden="true"></i>Careers</a></li>
      <% if (user) { %>
        <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i>
          Log Out</a></li>
        <% } else { %>
        <li><a href="/auth/google"><i class="fa fa-sign-in" aria-hidden="true"></i>
          Log In with Google</a></li>
          <% } %>
      <a href="#" title="My Account">
        <img class="profileImg" src="https://i.imgur.com/KB9fMRj.png" style="height:23px;width:23px" alt="Avatar">
      </a>
    </ul>
  </header>

  <!-- Header End -->
<div class="container">
<!-- User Form -->

  <form action="/user/<%user._id%>" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input name="email" type="email" class="form-control" id="inputEmail4">
      </div>
    </div>
      <div class="form-row">
      <div class="form-group col-md-6">
        <label>Phone Number</label>
        <input name="phoneNo" type="number" class="form-control">
      </div>
      </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputAddress">Location</label>
      <input name="location" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label> Career</label>
      <input name="job" type="text" class="form-control" placeholder="Current or Past Title">
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label> Education</label>
      <input name="school" type="text" class="form-control" placeholder="Bootcamp, Self-taught or Formal">
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label> Project</label>
      <input name="project" type="text" class="form-control" placeholder="Current or Past Project">
    </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Group</label>
        <input name="groups" type="text" class="form-control" placeholder="Enter a group">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Event</label>
        <input name="events" type="text" class="form-control" placeholder="Enter an event">
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck">
        <label class="form-check-label" for="gridCheck">
          Check me out
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
  </form>

  <!-- Form End -->
</div>
<!-- Footer -->

<footer >
  <div>
    <a href="https://imgur.com/Mc6BdV0">
    <img src="https://i.imgur.com/Mc6BdV0.png"  class="Logo" width="100" height="100"/></a>
  </div>
  <div>
    <p> <a href="">About</a></p>
    <p> <a href="">Advertising</a></p>
  </div>
  <div>
    <p> <a href="">Privacy & Terms</a></p>
    <p> <a href="">Careers</a></p>
    <p> <a href="">Community Guidelines</a></p>
  </div>
  <div>
    <p> <i class="fa fa-question-circle-o" aria-hidden="true"></i>
      <a href="">Questions</a></p>
    <p> <i class="fa fa-cog" aria-hidden="true"></i>
      <a href="">Manage your account and privacy</a></p>
  </div>
  <div class="social-media">
    <i class="fa fa-linkedin-square" aria-hidden="true"></i>
    <i class="fa fa-twitter" aria-hidden="true"></i>
    <i class="fa fa-github" aria-hidden="true"></i>
  </div>
</footer>

</body>
</html>
