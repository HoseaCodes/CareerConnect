<!DOCTYPE html>
<html>
<title>Career Connect</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Google Font -->
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
<!-- Secondary Link -->
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- Personal stylesheet -->
<link rel="stylesheet" href="/css/user/user.css">
<!-- icons -->
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
<body>
  <!-- header -->
  <header>
    <ul>
      <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a></li>
      <li><a href="/feed"><i class="fa fa-globe" aria-hidden="true"></i>Networking</a></li>
      <li><a href="/user"><i class="fa fa-user" aria-hidden="true"></i>Profile</a></li>
      <li><a href="/jobs"><i class="fa fa-briefcase" aria-hidden="true"></i>Careers</a></li>
      <% if (user) { %>
        <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i>
          Log Out</a></li>
        <% } else { %>
        <li><a href="/auth/google"><i class="fa fa-sign-in" aria-hidden="true"></i>
          Log In with Google</a></li>
          <% } %>
      <a href="#" title="My Account">
        <img class="headerImg" src="https://i.imgur.com/KB9fMRj.png" style="height:23px;width:23px" alt="Avatar">
      </a>
    </ul>
  </header>
  <% hunters.forEach(function(hunter) { %>
    <% if (hunter._id.equals(user && user._id)) { %>
  <div class="top">
    <p>Hello, <%= hunter.name %>, welcome to Career Connect we are glad you picked us to help start your journey. Click here to <a href="/user/userform"><b>start</b></a> .</p>
  </div> 
<!-- Page Container -->
<div class="container" style="max-width:1400px;">

    <!-- Profile -->
   
                 
      <div class="left">
        <div class="profile-container">
          <h4><%= hunter.name %></h4>
          <img src="<%=hunter.avatar%>" style="height:50px;width:50px" alt="Avatar">
          <!-- <form action="/user" method="POST" enctype="multipart/form-data">
            <input type="file" name="inputFile">
            <input type="submit" class="btn btn-primary">
        </form> -->
          <hr>
          <p><i class="fa fa-briefcase" aria-hidden="true"></i><%= hunter.job %></p>
          <p><i class="fa fa-home" aria-hidden="true"></i><%=hunter.location %></p>
          <p><i class="fa fa-envelope-o" aria-hidden="true"></i><%= hunter.email %></p>
          <p><i class="fa fa-mobile" aria-hidden="true"></i><%= hunter.phoneNo %></p>
          <hr>
        </div>
        <br>
      
      <!-- Accordin -->
        <div class="event-container">
          <button onclick="myFunction('1')"><i class="fa fa-users" aria-hidden="true"></i>
            My Groups</button>
          <div id="1">
            <p>Some text..</p>
            <p><%= hunter.groups %></p>
          </div>
          <hr>
          <br>
          <button onclick="myFunction('2')"><i class="fa fa-calendar" aria-hidden="true"></i>
            My Events</button>
          <div id="2">
            <p>Some other text..</p>
            <p><%= hunter.events %></p>
          </div>
          <hr>
          <br>
        </div>
        <br>
      

         <!-- Interests --> 
        <div class="interest-container">
            <p>Interests</p>
            <p>
              <span><% hunter.intrests %>></span>
              <span>Sports</span>
              <span>Fashion</span>
              <span>Games</span>
              <span>Friends</span>
              <span>Food</span>
              <span>Design</span>
              <span >Art</span>
              <span>Photos</span>
            </p>
        </div>
        <br>
      </div>
          <!-- End Left Column -->
    
        <!-- Middle Column -->
      <div class="middle">
        <div class="work">
          <h2><i class="fa fa-briefcase" aria-hidden="true"></i>Work Experience</h2>
            <div class="work">
              <h5><b><%= hunter.workExp %></b></h5>
              <h6><i class="fa fa-calendar" aria-hidden="true"></i> Date Worked <span>Current</span></h6>
              <p>Lorem ipsum dolor sit amet. Praesentium magnam consectetur vel in deserunt aspernatur est reprehenderit sunt hic. Nulla tempora soluta ea et odio, unde doloremque repellendus iure, iste.</p>
              <hr>
            </div>
            <div class="work">
              <h5><b>Back End Developer</b></h5>
              <h6><i class="fa fa-calendar" aria-hidden="true"></i> Date Worked </h6>
              <p>Consectetur adipisicing elit. Praesentium magnam consectetur vel in deserunt aspernatur est reprehenderit sunt hic. Nulla tempora soluta ea et odio, unde doloremque repellendus iure, iste.</p>
              <hr>
            </div>
          </div>
    
          <div class="projects">
            <h2><i class="fa fa-code" aria-hidden="true"></i>Projects</h2>
            <div class="projects">
              <h5><b><%= hunter.projects %></b></h5>
              <h6><i class="fa fa-calendar" aria-hidden="true"></i> Date Deployed/Finished V1</h6>
              <p>Weather API</p>
              <hr>
            </div>
            <div class="projects" >
              <h5 ><b>Project Ex</b></h5>
              <h6><i class="fa fa-calendar" aria-hidden="true"></i>Date Deployed/Finished V1</h6>
              <p>Certificate of Completion</p>
              <hr>
            </div>
          </div>
          <div class="education">
            <h2><i class="fa fa-certificate" aria-hidden="true"></i> Education</h2>
            <div class="education">
              <h5><b>School</b></h5>
              <h6><i class="fa fa-calendar" aria-hidden="true"></i> Date Attended</h6>
              <p>Business - Bachelor Degree</p>
              <hr>
            </div>
            <div class="education">
              <h5 ><b>GA BootCamp</b></h5>
              <h6><i class="fa fa-calendar" aria-hidden="true"></i>2020</h6>
              <p>Certificate of Completion</p>
              <hr>
            </div>
          </div>
          <br>
        </div>
    
        <!-- End Middle Column -->

      <!-- Right Column -->
    <div class="right">
        <!-- Upcoming Events -->
        <div class="upcoming">
          <p>Upcoming Events:</p>
          <p><strong>Holiday</strong></p>
          <p>Holiday Date</p>
          <p><button>Info</button></p>
        </div>
      <br>
      <!-- Friend Request -->
      <div class="network">
          <p>Friend Request</p>
          <img src="https://i.imgur.com/KB9fMRj.png" style="height:50px;width:50px" alt="Avatar"><br>
          <span>User Name</span>
          <hr>
          <br>
          <div>
            <div>
              <button title="Accept"><i class="fa fa-check" aria-hidden="true"></i>Add</button>
            </div>
            <div >
              <button title="Decline"><i class="fa fa-times" aria-hidden="true"></i>Deny</button>
            </div>
          </div>
        </div>
      </div>
      <br>
      
    <!-- End Right Column -->
</div>
<br>
<!-- End Page Container -->


<% } else {  %>
  <div class="bgimg w3-display-container w3-animate-opacity w3-text-white">
    <div class="Logo2">
      <a href="https://imgur.com/Mc6BdV0"><img src="https://i.imgur.com/Mc6BdV0.png" height="200" width="200" title="source: imgur.com" /></a>  </div>
    <div class="middle">
      <div class="logConatiner">
      <h1 class="h1">Please Log In </h1>
      <hr class="hr">
      <button class="button" type="submit"><a href="/auth/google"><i class="fa fa-sign-in" aria-hidden="true"></i>
        Log In with Google</a></button>
      </div>
    </div>
  </div>
    
<% } %>
<% }) %>
<!-- Footer -->

<footer >
  <div>
    <a href="https://imgur.com/Mc6BdV0">
    <img src="https://i.imgur.com/Mc6BdV0.png"  class="Logo" width="100" height="100"/></a>
  </div>
  <div>
    <p> <a href="">About</a></p>
    <p> <a href="">Advertising</a></p>
  </div>
  <div>
    <p> <a href="">Privacy & Terms</a></p>
    <p> <a href="">Careers</a></p>
    <p> <a href="">Community Guidelines</a></p>
  </div>
  <div>
    <p> <i class="fa fa-question-circle-o" aria-hidden="true"></i>
      <a href="">Questions</a></p>
    <p> <i class="fa fa-cog" aria-hidden="true"></i>
      <a href="">Manage your account and privacy</a></p>
  </div>
  <div class="social-media">
    <i class="fa fa-linkedin-square" aria-hidden="true"></i>
    <i class="fa fa-twitter" aria-hidden="true"></i>
    <i class="fa fa-github" aria-hidden="true"></i>
  </div>
</footer>

</body>
</html>
