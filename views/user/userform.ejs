<!-- Personal stylesheet -->
<link rel="stylesheet" href="/css/user/user.css">
<!-- icons -->
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
<body>
  <!-- header -->
  <header>
    <ul>
      <li><a href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a></li>
      <li><a href="/feed"><i class="fa fa-globe" aria-hidden="true"></i>Networking</a></li>
      <li><a href="/user"><i class="fa fa-user" aria-hidden="true"></i>Profile</a></li>
      <li><a href="/jobs"><i class="fa fa-briefcase" aria-hidden="true"></i>Careers</a></li>
      <% if (user) { %>
        <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i>
          Log Out</a></li>
        <% } else { %>
        <li><a href="/auth/google"><i class="fa fa-sign-in" aria-hidden="true"></i>
          Log In with Google</a></li>
          <% } %>
      <a href="#" title="My Account">
        <img class="profileImg" src="https://i.imgur.com/KB9fMRj.png" style="height:23px;width:23px" alt="Avatar">
      </a>
    </ul>
  </header>
  
  <div clss="form-container">
    <div class="form">
      <form action="/user" method="POST">
          <h3>Create Profile</h3>
          <% if (hunter._id.equals(null)) { %>
        <div class="row">
          <div class="col-25">
            <label for="name">Full Name</label>
          </div>
          <div class="col-75">
            <input type="text" id="name" name="name" placeholder="Your name..">
          </div>
        </div>
        <% } else { %>
        <div class="row">
          <div class="col-25">
            <label for="name"><%= hunter.name %></label>
          </div>
        <div class="col-75">
          <label class="if">We have you covered here!</label>
        </div>
      </div>
        <% } %>
      <div class="row">
        <div class="col-25">
          <label for="phoneNo">Phone Number</label>
        </div>
        <div class="col-75">
          <input type="number" name="phoneNo" id="placeholder" placeholder="Your phone number..">
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="job">Career</label>
        </div>
        <div class="col-75">
          <input id="subject" name="job" placeholder="Work experience.." >
          <button class="add-btn" type="submit" value="Add Job">+</button>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="projects">Projects</label>
        </div>
        <div class="col-75">
          <input id="subject" name="projects" placeholder="Enter Projects.." >
          <button class="add-btn" type="submit" value="Add Project">+</button>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="education">Education</label>
        </div>
        <div class="col-75">
          <input id="subject" name="education" placeholder="Enter Education.." >
          <button class="add-btn" type="submit" value="Add Project">+</button>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="groups">Groups</label>
        </div>
        <div class="col-75">
          <input id="subject" name="groups" placeholder="Add your groups.." >
          <button  class="add-btn" type="submit" value="Add Group">+</button>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="events">Upcoming Events</label>
        </div>
        <div class="col-75">
          <input id="subject" name="events" placeholder="Add any upcoming events.." >
          <button class="add-btn" type="submit" value="Add Event">+</button>
        </div>
      </div>
      <div class="row">
        <input type="submit" value="Submit">
      </div>
    </form>
    </div>
  </div>

<!-- Footer -->

<footer >
  <div>
    <a href="https://imgur.com/Mc6BdV0">
    <img src="https://i.imgur.com/Mc6BdV0.png"  class="Logo" width="100" height="100"/></a>
  </div>
  <div>
    <p> <a href="">About</a></p>
    <p> <a href="">Advertising</a></p>
  </div>
  <div>
    <p> <a href="">Privacy & Terms</a></p>
    <p> <a href="">Careers</a></p>
    <p> <a href="">Community Guidelines</a></p>
  </div>
  <div>
    <p> <i class="fa fa-question-circle-o" aria-hidden="true"></i>
      <a href="">Questions</a></p>
    <p> <i class="fa fa-cog" aria-hidden="true"></i>
      <a href="">Manage your account and privacy</a></p>
  </div>
  <div class="social-media">
    <i class="fa fa-linkedin-square" aria-hidden="true"></i>
    <i class="fa fa-twitter" aria-hidden="true"></i>
    <i class="fa fa-github" aria-hidden="true"></i>
  </div>
</footer>

</body>
</html>
