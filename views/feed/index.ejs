<body>

  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #607d8b;">
    <a class="navbar-brand" href="https://i.imgur.com/4qnq9XE.mp4">Career Connection</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse " id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/feed">Networking</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Careers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user">Profile</a>
        </li>
        <li class="nav-item">
          <% if (user) { %>
            <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
          <% } else { %>
            <a href="/auth/google"> <i class="material-icons left"><span class="blue-grey-text text-darken-2">vpn_key</span></i><label>Login with Google</label></span></a>
          <% } %>
        </li>
      </ul>
    </div>
  </nav>

    <h1>Latest Feed</h1>
    <div class="container">
        <div class="row">
          <div id="hunters" class="col s12">
            <% hunters.forEach(function(hunter) { %>
              <div class="card blue-grey">
                <div class="card-content white-text">
                  <div>
                    <span class="card-title">
                      <i class="small material-icons">perm_identity</i>
                      <span class="hunter-name"><%= hunter.name %></span>
                    </span>
                  </div>
                  <ul class="collection">
                    <% hunter.comments.forEach(function(comment, idx) { %>
                      <form action="/feed/<%idx %>" method="DELETE" class="delete-form" method="POST">                     
                      <li class="collection-item blue-grey-text text-darken-2"><%= comment.text %></li>
                        <button type="submit">ðŸ—‘</button>
                      </form>
                    <% }) %>
                  </ul>
                  <!-- Add Dynamic UI form below this line -->
                  <% if (hunter._id.equals(user && user._id)) { %>
                  <div class="card-action">
                    <form action="/feed" method="POST">
                      <input type="text" name="text" class="white-text">
                      <button type="submit" class="btn white-text">Add Comment</button>
                    </form>
                  </div>
                <% } %>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>



</body>
</html>